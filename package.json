{
  "name": "revelation-electron",
  "version": "1.0.1beta",
  "main": "main.js",
  "description": "A modular presentation builder for Reveal.js with integrated media management.",
  "author": {
    "name": "Daniel McFeeters",
    "email": "subscriptions@pastordaniel.net"
  },
  "build": {
    "appId": "com.revelation.snapshot",
    "productName": "REVELation Snapshot Presenter",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "asarUnpack": [
      "node_modules/sharp/**",
      "node_modules/@img/**/*"
    ],
    "files": [
      "**/*",
      "!dist/**",
      "!revelation/**",
      "!plugins/**",
      "!http_admin/**",
      "!node_modules/ffmpeg-static/**",
      "!node_modules/ffprobe-static/**"
    ],
    "extraResources": [
      {
        "from": "revelation",
        "to": "revelation"
      },
      {
        "from": "plugins",
        "to": "plugins"
      },
      {
        "from": "http_admin",
        "to": "http_admin"
      },
      {
        "from": "revelation/node_modules",
        "to": "revelation/node_modules",
        "filter": [
          "**/*",
          "!**/.bin/**"
        ]
      },
      {
        "from": "node_modules/ffmpeg-static/",
        "to": "ffmpeg",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/ffprobe-static/bin/",
        "to": "ffprobe",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "bin/",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "assets/icon.png",
      "maintainer": "Daniel McFeeters <subscriptions@pastordaniel.net>",
      "description": "A modular presentation builder for Reveal.js with media management.",
      "artifactName": "${name}-${version}.${ext}",
      "executableName": "revelation-electron"
    }
  },
  "scripts": {
    "preinstall": "node scripts/preinstall.js",
    "postinstall": "node scripts/postinstall.js",
    "start": "cross-env ELECTRON_DISABLE_SANDBOX=true electron .",
    "dev": "concurrently \"cd revelation && npm run watch:theme\" \"cross-env ELECTRON_DISABLE_SANDBOX=true electron .\"",
    "build": "cd revelation && npm run build && cd .. && node scripts/copy-plugins.js && node scripts/build-offline-plugins.js",
    "build-popplerpdf-win": "node scripts/build-popplerpdf-win.js",
    "build:offline-plugins": "node scripts/build-offline-plugins.js",
    "dist-popplerpdf-win": "node scripts/dist-popplerpdf-win.js",
    "dist-win": "node scripts/prepackage.js && electron-builder --win",
    "dist-linux": "node scripts/prepackage.js && electron-builder --linux",
    "dist-mac": "node scripts/prepackage.js && electron-builder --mac",
    "dist-mac-intel": "node scripts/prepackage.js && electron-builder --mac --x64",
    "llm:dump": "node revelation/scripts/dump-for-llm.js revelation_electron_file_summary.txt"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bonjour-service": "^1.2.1",
    "csv-parse": "^6.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "ip": "^2.0.1",
    "js-yaml": "^4.1.1",
    "jsdom": "^27.3.0",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.8.3",
    "tree-kill": "^1.2.2",
    "unzipper": "^0.12.3",
    "xml2js": "^0.6.2"
  }
}
