{
  "name": "revelation-electron",
  "version": "0.1.3-git",
  "main": "main.js",
  "build": {
    "appId": "com.revelation.snapshot",
    "productName": "REVELation Snapshot Presenter",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "asarUnpack": [
      "node_modules/sharp/**",
      "node_modules/@img/**/*"
    ],
    "files": [
      "**/*",
      "revelation/**/*"
    ],
    "extraResources": [
      {
        "from": "revelation",
        "to": "revelation"
      },
      {
        "from": "plugins",
        "to": "plugins"
      },
      {
        "from": "http_admin",
        "to": "http_admin"
      },
      {
        "from": "revelation/node_modules",
        "to": "revelation/node_modules"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "scripts": {
    "preinstall": "node scripts/copy-plugins.js",
    "start": "cross-env ELECTRON_DISABLE_SANDBOX=true electron .",
    "dev": "concurrently \"cd revelation && npm run watch:theme\" \"cross-env ELECTRON_DISABLE_SANDBOX=true electron .\"",
    "dist-win": "electron-builder --win",
    "dist-linux": "electron-builder --linux",
    "dist-mac": "electron-builder --mac",
    "dist-mac-intel": "electron-builder --mac --x64",
    "llm:dump": "node revelation/scripts/dump-for-llm.js revelation_electron_file_summary.txt"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^36.9.5",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "ip": "^2.0.1",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.1",
    "sharp": "^0.34.4",
    "tree-kill": "^1.2.2",
    "unzipper": "^0.12.3"
  }
}
