{
  "name": "revelation-electron",
  "version": "0.1.2",
  "main": "main.js",
  "build": {
    "appId": "com.revelation.snapshot",
    "productName": "REVELation Snapshot Presenter",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "asarUnpack": [
      "**/sharp/**/*",
      "**/@img/**/*"
    ],
    "files": [
      "**/*",
      "revelation/**/*",
      "node_modules/sharp/**/*",
      "node_modules/@img/**/*"
    ],
    "extraResources": [
      {
        "from": "revelation",
        "to": "revelation"
      },
      {
        "from": "revelation/node_modules",
        "to": "revelation/node_modules"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "flatpak": {
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "24.08",
      "sdk": "org.freedesktop.Sdk",
      "base": "io.atom.electron.BaseApp",
      "baseVersion": "24.08",
      "branch": "stable",
      "desktop": {
        "entry": "assets/revelation.desktop"
      },
      "finishArgs": [
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home"
      ]
    }
  },
  "scripts": {
    "start": "cross-env ELECTRON_DISABLE_SANDBOX=true electron .",
    "dev": "concurrently \"cd revelation && npm run watch:theme\" \"cross-env ELECTRON_DISABLE_SANDBOX=true electron .\"",
    "dist-win": "electron-builder --win",
    "dist-linux": "electron-builder --linux",
    "dist-mac": "electron-builder --mac",
    "dist-mac-intel": "electron-builder --mac --x64",
    "llm:dump": "node revelation/scripts/dump-for-llm.js revelation_electron_file_summary.txt"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^29.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "ip": "^2.0.1",
    "js-yaml": "^4.1.0",
    "sharp": "^0.34.3",
    "tree-kill": "^1.2.2",
    "unzipper": "^0.12.3"
  }
}
