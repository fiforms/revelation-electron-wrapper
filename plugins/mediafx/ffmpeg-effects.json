{
  "version": 1,
  "effects": [
    {
      "name": "Grayscale",
      "displayName": "Grayscale",
      "description": "Convert video to grayscale using ffmpeg",
      "vf": "format=gray",
      "i18n": {
        "es": {
          "displayName": "Escala de grises",
          "description": "Convertir video a escala de grises usando ffmpeg"
        }
      },
      "options": []
    },
    {
      "name": "Gaussian Blur",
      "displayName": "Gaussian Blur",
      "description": "Soft blur with configurable strength",
      "vf": "gblur=sigma={{sigma}}",
      "i18n": {
        "es": {
          "displayName": "Desenfoque gaussiano",
          "description": "Desenfoque suave con intensidad configurable",
          "options": {
            "sigma": "Intensidad del desenfoque"
          }
        }
      },
      "options": [
        {
          "name": "sigma",
          "description": "Blur strength",
          "type": "float",
          "default": 2.0,
          "range": {
            "low": 0.1,
            "high": 20
          }
        }
      ]
    },
    {
      "name": "Sepia Tone",
      "displayName": "Sepia Tone",
      "description": "Warm sepia wash for a vintage look",
      "vf": "colorchannelmixer=.393:.769:.189:0:.349:.686:.168:0:.272:.534:.131",
      "i18n": {
        "es": {
          "displayName": "Tono sepia",
          "description": "Filtro sepia cálido para un aspecto vintage"
        }
      },
      "options": []
    },
    {
      "name": "Vignette",
      "displayName": "Vignette",
      "description": "Darken edges to focus attention on the center",
      "vf": "vignette",
      "i18n": {
        "es": {
          "displayName": "Viñeta",
          "description": "Oscurecer bordes para enfocar la atención en el centro"
        }
      },
      "options": []
    },
    {
      "name": "Film Grain",
      "displayName": "Film Grain",
      "description": "Add subtle analog-style grain",
      "vf": "noise=alls={{strength}}:allf=t+u",
      "i18n": {
        "es": {
          "displayName": "Grano de película",
          "description": "Agregar grano sutil de estilo analógico",
          "options": {
            "strength": "Cantidad de grano"
          }
        }
      },
      "options": [
        {
          "name": "strength",
          "description": "Grain amount",
          "type": "float",
          "default": 12.0,
          "range": {
            "low": 0,
            "high": 40
          }
        }
      ]
    },
    {
      "name": "Color Boost",
      "displayName": "Color Boost",
      "description": "Lift contrast and saturation for punchy visuals",
      "vf": "eq=contrast={{contrast}}:brightness={{brightness}}:saturation={{saturation}}",
      "i18n": {
        "es": {
          "displayName": "Realce de color",
          "description": "Aumentar contraste y saturación para visuales más impactantes",
          "options": {
            "contrast": "Contraste",
            "brightness": "Brillo",
            "saturation": "Saturación"
          }
        }
      },
      "options": [
        {
          "name": "contrast",
          "description": "Contrast",
          "type": "float",
          "default": 1.1,
          "range": {
            "low": 0.5,
            "high": 2.0
          }
        },
        {
          "name": "brightness",
          "description": "Brightness",
          "type": "float",
          "default": 0.02,
          "range": {
            "low": -0.3,
            "high": 0.3
          }
        },
        {
          "name": "saturation",
          "description": "Saturation",
          "type": "float",
          "default": 1.2,
          "range": {
            "low": 0.0,
            "high": 3.0
          }
        }
      ]
    },
    {
      "name": "Hue Rotate",
      "displayName": "Hue Rotate",
      "description": "Shift hues for surreal color palettes",
      "vf": "hue=h={{degrees}}:s={{saturation}}",
      "i18n": {
        "es": {
          "displayName": "Rotación de tono",
          "description": "Desplazar tonos para paletas de color surreales",
          "options": {
            "degrees": "Rotación de tono (grados)",
            "saturation": "Multiplicador de saturación"
          }
        }
      },
      "options": [
        {
          "name": "degrees",
          "description": "Hue rotation (degrees)",
          "type": "float",
          "default": 30,
          "range": {
            "low": -180,
            "high": 180
          }
        },
        {
          "name": "saturation",
          "description": "Saturation multiplier",
          "type": "float",
          "default": 1.0,
          "range": {
            "low": 0.0,
            "high": 3.0
          }
        }
      ]
    },
    {
      "name": "Posterize",
      "displayName": "Posterize",
      "description": "Reduce colors for a bold graphic look",
      "vf": "posterize=levels={{levels}}",
      "i18n": {
        "es": {
          "displayName": "Posterizar",
          "description": "Reducir colores para un estilo gráfico marcado",
          "options": {
            "levels": "Niveles de color"
          }
        }
      },
      "options": [
        {
          "name": "levels",
          "description": "Color levels",
          "type": "int",
          "default": 6,
          "range": {
            "low": 2,
            "high": 16
          }
        }
      ]
    },
    {
      "name": "Pixelate",
      "displayName": "Pixelate",
      "description": "Chunky pixel blocks for retro aesthetics",
      "vf": "scale=iw/{{factor}}:ih/{{factor}}:flags=neighbor,scale=iw:ih:flags=neighbor",
      "i18n": {
        "es": {
          "displayName": "Pixelar",
          "description": "Bloques de píxeles grandes para estética retro",
          "options": {
            "factor": "Tamaño de píxel"
          }
        }
      },
      "options": [
        {
          "name": "factor",
          "description": "Pixel size",
          "type": "int",
          "default": 6,
          "range": {
            "low": 2,
            "high": 40
          }
        }
      ]
    },
    {
      "name": "Edge Sketch",
      "displayName": "Edge Sketch",
      "description": "Outline edges for a drawn look",
      "vf": "edgedetect=low={{low}}:high={{high}}",
      "i18n": {
        "es": {
          "displayName": "Boceto de bordes",
          "description": "Perfilar bordes para un aspecto dibujado",
          "options": {
            "low": "Umbral de borde (bajo)",
            "high": "Umbral de borde (alto)"
          }
        }
      },
      "options": [
        {
          "name": "low",
          "description": "Edge threshold (low)",
          "type": "float",
          "default": 0.1,
          "range": {
            "low": 0.0,
            "high": 1.0
          }
        },
        {
          "name": "high",
          "description": "Edge threshold (high)",
          "type": "float",
          "default": 0.4,
          "range": {
            "low": 0.0,
            "high": 1.0
          }
        }
      ]
    },
    {
      "name": "Inverted Colors",
      "displayName": "Inverted Colors",
      "description": "Invert the color palette for high-contrast looks",
      "vf": "negate",
      "i18n": {
        "es": {
          "displayName": "Colores invertidos",
          "description": "Invertir la paleta de color para un aspecto de alto contraste"
        }
      },
      "options": []
    },
    {
      "name": "Mirror Flip",
      "displayName": "Mirror Flip",
      "description": "Horizontal mirror for symmetrical compositions",
      "vf": "hflip",
      "i18n": {
        "es": {
          "displayName": "Espejo horizontal",
          "description": "Espejo horizontal para composiciones simétricas"
        }
      },
      "options": []
    }
  ]
}
